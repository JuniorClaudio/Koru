#refuges-map, #multi_markers, #refuges-list {
  height: 100%;
  width: 100%;
}

#refuge-map {
  height: 520px;
  width: 100%;
}

.wrap {
  height:auto;
  margin: auto;
  text-align:center;
  position:relative;
}
.text_over_image {
  position: absolute;
  margin: auto;
  top: 0;
  left:0;
  right:0;
  bottom:0;
  color:#fff;
  height:10px;
  font-size: 250%;
}

.chart-doughnut {
  display: inline-block !important;
  vertical-align: middle;
  &.chart-doughnut-legend {
    ul{
      list-style-type: none;
      padding: 0;
    }
    li {
      span {
        display: inline-block;
        margin-right: 5px;
        height: 12px;
        width: 12px;
        border-radius: 50%;
      }
    }
  }
}

.selector-styles {
  top: 20% !important;
}

.chart-container {
  width: 100%;
  height: 100%;
}

.chart-element {
  display: block;
  margin-top: 15px;
}

@media (min-width: 648px) {
  .chart-container {
    display: flex;
    align-items: center;
  }
}

#input-search-by-location, #responsive-input-search-by-location {
  height: 34px;
  .tt-menu {
    width: 100%;
    max-height: 400px;
    overflow-y: auto;
    margin-top: 12px;
    padding: 8px 0;
    background-color: #FFF;
    border: 1px solid #CCC;
    border: 1px solid rgba(0, 0, 0, 0.2);
    -webkit-border-radius: 8px;
       -moz-border-radius: 8px;
            border-radius: 8px;
    -webkit-box-shadow: 0 5px 10px rgba(0,0,0,.2);
       -moz-box-shadow: 0 5px 10px rgba(0,0,0,.2);
            box-shadow: 0 5px 10px rgba(0,0,0,.2);
    cursor: pointer;
  }
  .tt-suggestion {
    padding: 3px 20px;
    font-size: 18px;
    line-height: 24px;
    border-bottom: 1px solid #CACACA;
    &:last-child{
      border-bottom: none;
    }
  }
  .tt-selectable {
    &:hover, &.tt-cursor {
      background-color: rgba(0, 0, 0, 0.03) !important;
    }
  }
}

.filter-styles {
  display: flex;
  align-items: center;
  .ui {
    margin-left: 10px;
  }
}

.ui.selection.dropdown.multiple {
  -webkit-box-shadow: 0px 1px 2px 0 rgba(0, 0, 0, 0.1);
  -webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  border-radius: 2px;
  box-shadow: 0px 1px 2px 0 rgba(0, 0, 0, 0.1);
  border-color: #eaeaea;
  background-color: #fcfcfc;
  min-height: 1.714286em !important;
  .default.text, .text{
    top: -3px;
  }
}

.admin-button-margin {
  margin-right: 20px;
}

.navbar-btn.navbar-btn-right.translate-buttons-styles {
  font-size: 12px;
  margin-top: 15px;
}

.circle-green {
  background: asset_url("good-status.png") no-repeat center center/18px 18px;
  display: inline-block;
  height: 20px;
  width: 20px;
}

.circle-red {
  background: asset_url("bad-status.png") no-repeat center center/18px 18px;
  display: inline-block;
  height: 20px;
  width: 20px;
}

.td-padding-right {
  padding-right: 10px;
}

#steps-container {
  max-width: 950px !important;
}

.ui .form {
  .header-text {
    text-align: left !important;
    display: block;
  }
}

.in, .out {
  -webkit-animation-timing-function: ease-in-out;
  -webkit-animation-duration: 500ms !important;
}

.font {
  font-family: 'Lobster', cursive;
  font-weight: 300;
  font-size: 40px;
}

#engagement-container {
  display: none;
}

#person-container {
  display: none;
}

#organization-container {
  display: block;
}

.text.container {
  width: 40%;
}

#logo {
  border: 2px solid white;
  border-radius: 10px;
  color: black;
  padding: 15px;
}

#logo:hover {
  box-shadow: 0px 0px 5px 5px black;
}

.assign-header-styles {
  background-color: white;
  padding: 10px;
}

.ui.checkbox label {
  font-size: 0.8em !important;
  cursor: pointer !important;
}

.checkbox-container.checkbox {
  margin-top: 4px;
  margin-bottom: 4px;
}

.panel-margin {
  padding-bottom: 30px !important;
}

.th-header-styles {
  padding-top: 15px;
  padding-bottom: 15px;
  font-size: 18px;
}

.button-view-mode {
  left: 45%;
  width: 65px;
  bottom: 0px;
  height: 35px;
  padding: 5px;
  font-size: 12px;
  position: fixed;
  text-align: center;
  margin-bottom: 20px;
  background-color: #FFF;
  border: 1px solid #CCC;
  border: 1px solid rgba(0, 0, 0, 0.2);
  -webkit-border-radius: 8px;
     -moz-border-radius: 8px;
          border-radius: 8px;
  -webkit-box-shadow: 0 5px 10px rgba(0,0,0,.2);
     -moz-box-shadow: 0 5px 10px rgba(0,0,0,.2);
          box-shadow: 0 5px 10px rgba(0,0,0,.2);
}

.panels-info-margin {
  font-size: 14px;
  margin-left: 10px;
  margin-right: 10px;
  &:first-child {
    margin-top: 15px;
  }
}

.td-vertical-align {
  vertical-align: top;
}

.td-text-align {
  text-align: right;
}

#needs-table {
  td {
    padding-bottom: 8px;
  }
}