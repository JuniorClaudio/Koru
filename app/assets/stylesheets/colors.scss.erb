$color: (
  food: #8E2BFA,
  health: #BB26DD,
  personal-hygiene: #FD7A8B,
  cleaning: #F2A43B,
  electricity: #F7E43B,
  water: #5AE1C2,
  solid-waste: #4DD0E8,
  security: #10509E,
  green-line: #64E67D,
  green-status: #4CC981,
  amber-status: #FFC44D,
  red-status: #FF8080,
  abilities: #1DE9B6
);

@function color($prop) {
  @return map-get($color, $prop);
}