$color: (
  food: #EB3349,
  health: #64E67D,
  personal-hygiene: #FFBB29,
  cleaning: #00AEEF,
  electricity: #B96CF5,
  water: #BD0FE1,
  solid-waste: #4990E2,
  security: #F8E81C,
  green-line: #64E67D,
  green-status: #4CC981,
  amber-status: #FFC44D,
  red-status: #FF8080
);

@function color($prop) {
  @return map-get($color, $prop);
}