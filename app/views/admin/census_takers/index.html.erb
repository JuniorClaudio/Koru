<h1>
  Empadronadores
  <div class="pull-right">
    <%= link_to "Nuevo", "#", class: "btn btn-primary" %>
  </div>
</h1>
<%= form_tag admin_census_takers_path, method: :get, class: "form-inline", remote: true do %>
  <%= text_field_tag :dni, params[:dni], value: params[:dni], placeholder: "Ingrese dni", class: "form-control" %>
  <%= text_field_tag :phone, params[:phone], value: params[:phone], placeholder: "Ingrese celular", class: "form-control" %>
  <%= submit_tag "Filtrar", name: nil, class: "btn btn-primary margin-button-filter" %>
<% end %>
<div class="panel info-panel-margin">
  <div id="census-taker-list" class="panel-body">
    <%= render 'census_takers_table', census_takers: @census_takers %>
  </div>
</div>