<div class="panel">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t "refuges.general" %></h3>
    <hr>
  </div>
  <div class="panel-body" id="contact-general">
    <form class="form-horizontal">
      <div class="form-group">
        <p class="col-md-4"><b><%= t "refuges.location" %>:</b></p>
        <p class="col-md-8"><%= refuge.latitude + ' , ' + refuge.longitude %></p>
      </div>
      <div class="form-group">
        <p class="col-md-4"><b><%= t "refuges.address" %>:</b></p>
        <p class="col-md-8"><%= refuge.address %></p>
      </div>
      <div class="form-group">
        <p class="col-md-4"><b><%= t "refuges.state" %>:</b></p>
        <p class="col-md-8"><%= refuge.city %></p>
      </div>
      <div class="form-group">
        <p class="col-md-4"><b><%= t "refuges.refuge_type" %>:</b></p>
        <p class="col-md-8"><%= set_refuge_type refuge, params[:locale] %></p>
      </div>
      <div class="form-group">
        <p class="col-md-4"><b><%= t "refuges.institution_in_charge" %>:</b></p>
        <p class="col-md-8"><%= set_institution_in_charge refuge, params[:locale] %></p>
      </div>
    </form>
  </div>
</div>