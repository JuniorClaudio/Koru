<div class="panel">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t "refuges.capacity" %></h3>
    <hr>
  </div>
  <div class="panel-body">
    <form class="form-horizontal">
      <div class="form-group">
        <p class="col-md-8"><b><%= t "refuges.number_of_families" %>:</b></p>
        <p class="col-md-4"><%= refuge.number_of_families %></p>
      </div>
      <div class="form-group">
        <p class="col-md-8"><b><%= t "refuges.children_under_3_male" %>:</b></p>
        <p class="col-md-4"><%= refuge.children_under_3_male %></p>
      </div>
      <div class="form-group">
        <p class="col-md-8"><b><%= t "refuges.children_under_3_female" %>:</b></p>
        <p class="col-md-4"><%= refuge.children_under_3_female %></p>
      </div>
      <div class="form-group">
        <p class="col-md-8"><b><%= t "refuges.people_less_than_or_equals_to_18_male" %>:</b></p>
        <p class="col-md-4"><%= refuge.people_less_than_or_equals_to_18_male %></p>
      </div>
      <div class="form-group">
        <p class="col-md-8"><b><%= t "refuges.people_less_than_or_equals_to_18_female" %>:</b></p>
        <p class="col-md-4"><%= refuge.people_less_than_or_equals_to_18_female %></p>
      </div>
      <div class="form-group">
        <p class="col-md-8"><b><%= t "refuges.people_older_than_18_male" %>:</b></p>
        <p class="col-md-4"><%= refuge.people_older_than_18_male %></p>
      </div>
      <div class="form-group">
        <p class="col-md-8"><b><%= t "refuges.people_older_than_18_female" %>:</b></p>
        <p class="col-md-4"><%= refuge.people_older_than_18_female %></p>
      </div>
      <div class="form-group">
        <p class="col-md-8"><b><%= t "refuges.older_adults_male" %>:</b></p>
        <p class="col-md-4"><%= refuge.older_adults_male %></p>
      </div>
      <div class="form-group">
        <p class="col-md-8"><b><%= t "refuges.older_adults_female" %>:</b></p>
        <p class="col-md-4"><%= refuge.older_adults_female %></p>
      </div>
      <div class="form-group">
        <p class="col-md-8"><b><%= t "refuges.number_of_pregnant_women" %>:</b></p>
        <p class="col-md-4"><%= refuge.number_of_pregnant_women %></p>
      </div>
      <div class="form-group">
        <p class="col-md-8"><b><%= t "refuges.number_of_people_with_disabilities" %>:</b></p>
        <p class="col-md-4"><%= refuge.number_of_people_with_disabilities %></p>
      </div>
      <div class="form-group">
        <p class="col-md-8"><b><%= t "refuges.number_of_pets" %>:</b></p>
        <p class="col-md-4"><%= refuge.number_of_pets %></p>
      </div>
      <div class="form-group">
        <p class="col-md-8"><b><%= t "refuges.number_of_farm_animals" %>:</b></p>
        <p class="col-md-4"><%= refuge.number_of_farm_animals %></p>
      </div>
    </form>
  </div>
</div>